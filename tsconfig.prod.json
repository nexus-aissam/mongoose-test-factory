{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": false,
    "removeComments": false,
    "declarationMap": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "stripInternal": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/__tests__",
    "**/*.dev.ts",
    "**/*.example.ts"
  ]
}
